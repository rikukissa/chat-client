.chat__input
  position absolute
  bottom 0
  width calc(100% - 1em)
  padding 1em
  padding-top 0
  padding-right 2em
  box-sizing border-box
  background #fff
  textarea
    width 100%
    padding 1em 0
    height 1em
    border 0
    border-bottom 1px solid #e6e6e6
    font inherit
    color inherit
    &:focus
      outline 0
  &:before
    top -1em
    width calc(100% - 1em)
    height 1em
    background linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%)
    content ''
    position absolute
    left 0

