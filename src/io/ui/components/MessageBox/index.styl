@import '~vars'

.message-box
  flex 0 1
  flex-grow 1
  overflow auto
  padding 1em
  padding-bottom 0

.message-box__timestamp
  font-size 0.8em
  color #aaa
  border-bottom 1px solid #D4D4D4
  margin-bottom 0.5em
  padding-bottom 4px
  font-family secondaryFont


.message-box__message:not(:last-child)
  margin-bottom 1em

.message-group:not(:last-child)
  margin-bottom 1em


.message-group__header
  margin-bottom 5px

.message-group__nick
  font-weight bold
  font-family titleFont
  font-weight 600
  font-size 1.25em

.message-group__timestamp
  font-size 13px
  margin-left 0.5em
  font-family secondaryFont

.message-group__timestamp:first-child
  margin-left 0em
