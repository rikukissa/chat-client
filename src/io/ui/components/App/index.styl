@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:600');

body, html
  margin 0
  padding 0
  font 16px Georgia, Cambria, 'Times New Roman', Times, serif
  -webkit-font-smoothing antialiased
  color #333

ul
  list-style none
  padding 0
  margin 0
button
  border 0
  background transparent
  margin 0
  padding 0

.chat, body, html
  width 100%
  height 100%

.chat
  display flex

.chat__container
  flex 1
  display flex
  flex-direction column

.chat__channels
  width 180px
  padding 1em 0.5em
  position relative
  &:after
    position absolute
    right 0
    height 95%
    top 2.5%
    width 1px
    background red
    content ''
    background linear-gradient(to bottom, rgba(241,59,88,0) 0%,rgba(222,56,108,0.74) 12%,rgba(194,52,137,1) 30%,rgba(132,42,202,1) 70%,rgba(104,37,231,0.74) 88%,rgba(85,34,251,0.06) 100%)

.channel
  font-weight 300
  padding 2px 0.5em
  padding-bottom 4px
  margin-bottom 0.25em
  cursor pointer
  color #aaa
  &:hover
    background #F5F5F5
    border-radius 3px
  *
    vertical-align middle
  button
    float right
    display none
.channel--is-active
  color #333
  font-weight 600
.channel__name
  float right

.channel__badge
  margin-top 1px
  display inline-block
  margin-right 0.75em

.badge
  width 1.5rem
  height 1.5rem
  border-radius 3px
  color #fff
  text-align center
  line-height 1.5rem
  font-size 10px
  background #007AFF

.badge--alert
  background #FF3B30
  font-weight bold

.badge--notice
  background #FF5E3A

.chat__input
  padding 1em
  margin 0
  input
    flex 1
    padding 1.5em 1em
    height 2em
    border 1px solid #ccc
    font inherit
    padding-right 7em
  button
    position absolute
    padding 0 2em
    border 0
    background transparent
    font inherit
    font-weight 300
    color #1AD6FD
    cursor pointer
    border-radius 3px
    top 50%
    margin-top -0.6em
    right 0

.chat__input-wrapper
  position relative
  display flex

