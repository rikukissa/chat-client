@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:600');
@import '~vars'

body, html
  margin 0
  padding 0
  font 16px primaryFont
  -webkit-font-smoothing antialiased
  color #333

form
  margin 0

ul
  list-style none
  padding 0
  margin 0

button
  border 0
  background transparent
  margin 0
  padding 0

.chat, body, html
  width 100%
  height 100%

.chat
  display flex

.chat__container
  flex 1
  display flex
  flex-direction column
  position relative
